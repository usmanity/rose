{
  "name": "rose",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "npm run build-css && npm run pandoc-convert && npm run copy-files",
    "build-css": "tailwindcss -i ./rose/css/main.css -o ./dist/css/main.css",
    "copy-files": "node rose/copy_files.js",
    "pandoc-convert": "pandoc src/homepage.md --template=rose/homepage_template.html -o dist/index.html",
    "watch": "nodemon --exec npm run build -e md,html --watch src --watch rose"
  },

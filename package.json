  "dependencies": {
    "ncp": "^2.0.0",
    "pandoc": "^0.2.0",
    "pandoc-bin": "^0.2.0",
    "tailwindcss": "^3.3.2",
    "postcss": "^8.4.25",
    "autoprefixer": "^10.4.14"
  }
}
